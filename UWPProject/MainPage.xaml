<Page
    x:Class="UWPProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:camera="using:UWPProject.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Loaded="MainPageLoaded">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <NavigationView Name="Navigation" PaneDisplayMode="Top">
                    <NavigationView.MenuItems>
                        <NavigationViewItem x:Name="Random" />
                        <NavigationViewItem x:Name="TopRated" />
                        <NavigationViewItem x:Name="Recent" />
                        <NavigationViewItem x:Name="Favourites" />
                    </NavigationView.MenuItems>
                </NavigationView>
                <DropDownButton x:Name="ChangeLanguage">
                    <TextBlock x:Name="Language"></TextBlock>
                    <DropDownButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Name="English"></MenuFlyoutItem>
                            <MenuFlyoutItem Name="Russian"></MenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>

            <GridView Grid.Row="1" x:Name="GridView" ItemsSource="{x:Bind Cameras.Cameras}">
                <GridView.ItemTemplate>
                    <DataTemplate x:Name="ImageOverlayDataTemplate" x:DataType="camera:CameraModel">
                        <Grid Height="180" Width="320">
                            <Image Source="Placeholder.png" Stretch="UniformToFill"/>
                            <StackPanel Orientation="Vertical" Height="60" VerticalAlignment="Bottom" Background="{ThemeResource SystemBaseLowColor}" Padding="12">
                                <TextBlock Visibility="Collapsed" Text="{x:Bind Id, Mode=OneWay}"></TextBlock>
                                <TextBlock Text="{x:Bind Country, Mode=OneWay}"/>
                                <TextBlock Text="{x:Bind City, Mode=OneWay}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid MaximumRowsOrColumns="4" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
        </Grid>
    </Grid>
</Page>
